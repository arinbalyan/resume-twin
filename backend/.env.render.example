# =====================================================
# Resume Twin Backend - Environment Variables
# =====================================================
# Copy this file to .env and fill in your values
# For Render deployment, set these in the Render dashboard
# =====================================================

# ============== REQUIRED ==============

# Environment (development, staging, production)
ENVIRONMENT=production
DEBUG=false

# Security - Auto-generated on Render, or set your own
# SECRET_KEY=your-secret-key-here

# Supabase Configuration (Required)
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============== AI SERVICES ==============

# OpenRouter AI (Free tier available)
# Get key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-key
OPENROUTER_MODEL=openai/gpt-oss-20b:free

# ============== OPTIONAL SERVICES ==============

# GitHub API (Free - 5000 req/hr with token)
# Get at: https://github.com/settings/tokens
GITHUB_TOKEN=

# PDF Generation (Choose one - all have free tiers)
# PDFShift: https://pdfshift.io/ - 250 free/month
PDFSHIFT_API_KEY=

# HTML2PDF: https://html2pdf.app/ - 100 free/month
HTML2PDF_API_KEY=

# Browserless: https://browserless.io/ - 1000 free/month
BROWSERLESS_API_KEY=

# ============== STORAGE (Optional) ==============

# Supabase Storage (uses same URL as database)
SUPABASE_STORAGE_BUCKET=portfolio-files
SUPABASE_STORAGE_ACCESS_KEY=
SUPABASE_STORAGE_SECRET_KEY=

# OR use regular S3
S3_BUCKET_NAME=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1

# ============== RENDER-SPECIFIC ==============

# These are auto-set by Render
# RENDER=true
# RENDER_SERVICE_NAME=resume-twin-api
# PORT=10000

# Memory optimization (recommended for free tier)
MEMORY_OPTIMIZED=true
MAX_WORKERS=1
LIMIT_CONCURRENCY=50

# ============== CORS ==============

# Comma-separated list of allowed origins
# IMPORTANT: Add your Vercel frontend URL here!
# Example: https://resume-twin.vercel.app,https://your-custom-domain.com
BACKEND_CORS_ORIGINS=https://resume-twin.vercel.app

# ============== LOGGING ==============

LOG_LEVEL=INFO

# ============== OPTIONAL INTEGRATIONS ==============

# Email verification
HUNTER_API_KEY=
ABSTRACT_EMAIL_API_KEY=

# Company logos
CLEARBIT_API_KEY=

# Location detection
IPINFO_TOKEN=

# Stock images
UNSPLASH_ACCESS_KEY=

# Error tracking
SENTRY_DSN=
