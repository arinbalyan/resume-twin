# Supabase Configuration
# Get these from your Supabase project dashboard: https://app.supabase.com/project/[project-id]/settings/api
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Database (Supabase PostgreSQL)
# Your PostgreSQL connection string from Supabase
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Supabase Storage Configuration (S3-compatible)
# Get these from Supabase Dashboard → Storage → Settings
SUPABASE_STORAGE_ACCESS_KEY=your-storage-access-key
SUPABASE_STORAGE_SECRET_KEY=your-storage-secret-key
SUPABASE_STORAGE_BUCKET=portfolio-files
SUPABASE_STORAGE_REGION=us-east-1

# Alternative: Direct Supabase Storage Configuration
# Use Supabase service role key for storage operations
SUPABASE_STORAGE_URL=https://your-project-ref.supabase.co/storage/v1/object

# OpenRouter API Configuration
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key-here

# FastAPI Configuration
APP_NAME=Portfolio Builder API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Security
SECRET_KEY=your-very-secure-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173", "https://your-frontend-domain.com"]

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/webp", "application/pdf"]

# Resume Generation Settings
# ========================================
# PDF GENERATION METHOD CONFIGURATION
# Choose one: "latex", "html", or "overleaf"
# - "latex": Local LaTeX compilation (requires texlive installation)
# - "html": HTML-to-PDF using WeasyPrint (no LaTeX required, faster)
# - "overleaf": Cloud-based LaTeX via Overleaf API (requires API access)
PDF_GENERATION_METHOD=html

# LaTeX Configuration (when PDF_GENERATION_METHOD=latex)
LATEX_COMPILE_TIMEOUT=60
# Optional: External LaTeX compilation service URL
# LATEX_COMPILE_SERVER_URL=https://your-latex-service.com/compile

# HTML-to-PDF Configuration (when PDF_GENERATION_METHOD=html)
HTML_TO_PDF_ENABLED=true

# Overleaf API Configuration (when PDF_GENERATION_METHOD=overleaf)
# Get API credentials from Overleaf: https://www.overleaf.com/user/settings
# OVERLEAF_API_URL=https://api.overleaf.com/v1
# OVERLEAF_API_TOKEN=your-overleaf-api-token-here
# OVERLEAF_TEMPLATE_ID=optional-base-template-id

# Templates Directory
TEMPLATES_DIR=templates
TEMPLATE_CACHE_SIZE=50
# ========================================

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0