# =====================================================
# Resume Twin Frontend - Vercel Environment Variables
# =====================================================
# Set these in Vercel Dashboard → Your Project → Settings → Environment Variables
# =====================================================

# ============== REQUIRED ==============

# Supabase Configuration
# Get from: https://supabase.com/dashboard/project/_/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-public-key

# Backend API URL (your Render deployment)
VITE_API_URL=https://resume-twin-api.onrender.com/api/v1

# ============== OPTIONAL ==============

# Environment
VITE_NODE_ENV=production
VITE_DEBUG=false

# Feature Flags
VITE_ENABLE_AI_OPTIMIZATION=true
VITE_ENABLE_FILE_UPLOADS=true
VITE_ENABLE_DARK_MODE=true

# Social Auth (configure in Supabase)
VITE_ENABLE_GOOGLE_AUTH=false
VITE_ENABLE_GITHUB_AUTH=false

# Analytics (optional)
VITE_SENTRY_DSN=
VITE_GA_TRACKING_ID=

# Security
VITE_ENABLE_HTTPS_ONLY=true
