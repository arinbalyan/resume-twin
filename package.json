{
  "name": "resume-twin",
  "version": "1.0.0",
  "description": "Portfolio & Resume Generation Platform with AI-powered optimization",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently -n \"frontend,backend\" -c \"cyan,magenta\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && uv run uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "test": "npm run test:all",
    "test:all": "cd backend && uv run pytest ../tests -v",
    "test:all:verbose": "cd backend && uv run pytest ../tests -v --tb=long",
    "test:all:coverage": "cd backend && uv run pytest ../tests -v --cov=app --cov-report=html:../htmlcov --cov-report=term-missing",
    "test:all:sequential": "cd backend && uv run python ../tests/run_tests.py --sequential",
    "test:all:html": "cd backend && uv run pytest ../tests -v --html=../test_report.html --self-contained-html",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && uv run pytest tests/ -v",
    "test:services": "cd backend && uv run pytest ../tests -v",
    "test:service:ai": "cd backend && uv run pytest ../tests/test_ai_service.py -v",
    "test:service:file": "cd backend && uv run pytest ../tests/test_file_service.py -v",
    "test:service:github": "cd backend && uv run pytest ../tests/test_github_service.py -v",
    "test:service:profile": "cd backend && uv run pytest ../tests/test_profile_service.py -v",
    "test:service:project": "cd backend && uv run pytest ../tests/test_project_service.py -v",
    "test:service:resume": "cd backend && uv run pytest ../tests/test_resume_service.py -v",
    "test:service:scorer": "cd backend && uv run pytest ../tests/test_resume_scorer_service.py -v",
    "test:service:s3": "cd backend && uv run pytest ../tests/test_s3_service.py -v",
    "test:service:template": "cd backend && uv run pytest ../tests/test_template_service.py -v",
    "test:unit": "cd backend && uv run pytest tests/services/ -v",
    "test:integration": "cd backend && uv run pytest tests/integration/ -v",
    "test:coverage": "cd backend && uv run pytest ../tests -v --cov=app --cov-report=html:../htmlcov --cov-report=term-missing",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && uv run ruff check .",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:fix:frontend": "cd frontend && npm run lint -- --fix",
    "lint:fix:backend": "cd backend && uv run ruff check . --fix",
    "type-check": "npm run type-check:frontend && npm run type-check:backend",
    "type-check:frontend": "cd frontend && npm run type-check",
    "type-check:backend": "cd backend && uv run mypy app/",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd frontend && npm run format",
    "format:backend": "cd backend && uv run black . && uv run isort .",
    "format:check": "npm run format:check:frontend && npm run format:check:backend",
    "format:check:frontend": "cd frontend && npx prettier --check .",
    "format:check:backend": "cd backend && uv run black --check . && uv run isort --check-only .",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && npm run clean",
    "clean:backend": "cd backend && powershell -Command \"Remove-Item -Recurse -Force -ErrorAction SilentlyContinue __pycache__, .pytest_cache, .mypy_cache, htmlcov, .coverage\"",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && uv sync",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && uv sync",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "setup": "npm run install:all",
    "validate": "npm run lint && npm run type-check && npm run test"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "keywords": [
    "resume",
    "portfolio",
    "cv",
    "jobs",
    "career",
    "ai",
    "templates",
    "latex",
    "pdf-generation",
    "fastapi",
    "react",
    "vite",
    "supabase"
  ],
  "author": "Resume Twin Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arinbalyan/resume-twin.git"
  },
  "bugs": {
    "url": "https://github.com/arinbalyan/resume-twin/issues"
  },
  "homepage": "https://github.com/arinbalyan/resume-twin#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}