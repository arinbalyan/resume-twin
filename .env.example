# Development Environment
DEBUG=True
ENVIRONMENT=development

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
